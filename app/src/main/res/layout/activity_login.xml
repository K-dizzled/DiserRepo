<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".LoginActivity"
    android:background="@drawable/ic_bub2">




    <TextView
        android:id="@+id/textLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/muli_semibold"
        android:text="Вход"
        android:textAlignment="center"
        android:textColor="@color/coloWhite"

        android:paddingBottom="30dp"
        android:textSize="40sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/emailTIL"
        android:layout_below="@id/textLog"
        android:textColorHint="@color/coloWhite"
        >
        <EditText
            android:id="@+id/emailEt"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="40dp"
            android:textColor="@color/coloWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/passwordTIL"
        android:layout_below="@id/emailTIL"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/coloWhite">
        <EditText
            android:id="@+id/passwordEt"
            android:inputType="textPassword"
            android:textColor="@color/coloWhite"
            android:hint="Пароль"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/loginBtn"
        android:text="Войти"
        android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTIL"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        />

    <TextView
        android:id="@+id/recoverPassTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Забыли пароль?"
        android:paddingTop="5dp"
        android:fontFamily="@font/muli_semibold"
        android:textSize="20sp"
        android:layout_below="@+id/loginBtn"
        android:textColor="@color/coloWhite"
        />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/recoverPassTv"
        android:paddingTop="20dp"
        >
    </com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/nothave_accountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Впервые у нас? Создать аккаунт"
        android:fontFamily="@font/muli_semibold"
        android:textSize="20sp"
        android:layout_below="@id/googleLoginBtn"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textColor="@color/coloWhite"
        />

</RelativeLayout>