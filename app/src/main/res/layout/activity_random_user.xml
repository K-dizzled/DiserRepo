<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomUserActivity"
    android:background="@color/graylight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarRand"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_planet_icon" />

            <TextView
                android:id="@+id/nameRand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_semibold"
                android:text="Name"
                android:layout_gravity="center_horizontal"
                android:textSize="50sp"
                android:paddingTop="5dp"
                />

            <TextView
                android:id="@+id/emailRand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/muli_light"
                android:text="email"
                android:textSize="30sp" />

        </LinearLayout>
    </RelativeLayout>

<LinearLayout
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">
    <Button
        android:id="@+id/send_rand_msg"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom_button2"
        android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
        android:drawableStart="@drawable/ic_chat_bubble_outline_black_24dp"
        android:drawablePadding="-30dp"
        android:fontFamily="@font/muli_semibold"
        android:minWidth="230dp"
        android:paddingLeft="15dp"
        android:text="Send message"
        android:textAllCaps="false"
        android:textColor="@color/coloWhite"
        android:textSize="25dp" />


</LinearLayout>


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/refresh"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_button2"
            android:drawableLeft="@drawable/ic_refresh_black_24dp"
            android:drawableStart="@drawable/ic_refresh_black_24dp"
            android:paddingLeft="17dp"/>
    </LinearLayout>

    </LinearLayout>